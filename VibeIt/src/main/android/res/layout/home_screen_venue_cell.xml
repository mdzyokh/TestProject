<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:vibeit="http://schemas.android.com/apk/res/com.vibeit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/business_details_list_item_bkg"
                android:padding="10dp">

    <RelativeLayout android:id="@+id/venue_section"
                    android:layout_width="fill_parent"
                    android:layout_height="70dp"
                    android:layout_alignParentTop="true">

        <ImageView android:id="@+id/arrow"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_centerVertical="true"
                   android:src="@drawable/arrow_home_screen"
                   android:layout_marginLeft="5dp"/>

        <RatingBar android:id="@+id/location_rating"
                   style="@style/HomeRatingBar"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_toLeftOf="@id/arrow"
                   android:layout_centerVertical="true"
                   android:isIndicator="true"
                   android:max="5"/>

        <com.vibeit.widget.CustomFontTextView
                android:id="@+id/distance_to_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:textColor="@color/list_item_text_color"
                vibeit:typeface="Helvetica.ttf"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:layout_alignParentRight="true"
                android:layout_above="@id/location_rating"
                android:layout_marginBottom="3dp"/>


            <com.vibeit.widget.CustomFontTextView
                    android:id="@+id/location_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="@color/list_item_text_color"
                    vibeit:typeface="Helvetica_Bold.ttf"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:shadowColor="@android:color/white"
                    android:shadowDx="0"
                    android:shadowDy="1"
                    android:shadowRadius="0.5"
                    android:layout_toLeftOf="@id/distance_to_location"
                    android:layout_alignBottom="@id/distance_to_location"
                    android:layout_above="@id/location_rating"
                    android:gravity="left"/>

            <com.vibeit.widget.CustomFontTextView
                    android:id="@+id/location_address"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textSize="14dp"
                    android:textColor="@color/list_item_text_color"
                    vibeit:typeface="Helvetica.ttf"
                    android:lineSpacingExtra="8dp"
                    android:maxLines="2"
                    android:ellipsize="marquee"
                    android:gravity="top|left"
                    android:layout_marginTop="5dp"
                    android:layout_toLeftOf="@id/location_rating"
                    android:layout_below="@id/location_name"/>
    </RelativeLayout>

    <LinearLayout android:id="@+id/reward_section"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:gravity="top"
                  android:layout_below="@id/venue_section"
                  android:visibility="gone">

        <com.vibeit.widget.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="REWARD"
                android:textSize="12dp"
                android:textColor="@android:color/white"
                vibeit:typeface="ArialRoundedMTBold.ttf"
                android:textStyle="bold"
                android:background="@drawable/ic_reward"
                android:gravity="center"
                android:shadowColor="@android:color/black"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="0.5"/>


        <com.vibeit.widget.CustomFontTextView
                android:id="@+id/reward_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Free premium coffee ($2.00 value)"
                android:textSize="12dp"
                android:textColor="@android:color/white"
                vibeit:typeface="Helvetica_Oblique.ttf"
                android:textStyle="bold"
                android:background="@drawable/bkg_reward"
                android:gravity="center"/>
    </LinearLayout>

</RelativeLayout>