<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:vibeit="http://schemas.android.com/apk/res/com.vibeit"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:fillViewport="true"
            android:scrollbars="none">

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        <!--
            android:background="@drawable/blue_background"-->

        <ImageView
                android:visibility="invisible"
                android:id="@+id/logo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:padding="10dp"
                android:src="@drawable/logo"
                android:contentDescription="logo"/>

        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@id/logo"
                android:padding="10dp"
                android:background="@color/bottom_background">

            <LinearLayout
                    android:id="@+id/form"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/form_background">

                <Spinner
                        android:id="@+id/gender_drop_down"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:prompt="@string/choose_gender_promt"
                        android:background="@drawable/spinner_bg"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"/>

                <View android:layout_width="fill_parent"
                      android:layout_height="2px"
                      android:layout_margin="5dp"
                      android:background="@drawable/line_horizontal"/>

                <Spinner
                        android:id="@+id/age_drop_down"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:prompt="@string/choose_age_promt"
                        android:background="@drawable/spinner_bg"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"/>

                <View android:layout_width="fill_parent"
                      android:layout_height="2px"
                      android:layout_margin="5dp"
                      android:background="@drawable/line_horizontal"/>

                <LinearLayout android:layout_width="fill_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:paddingTop="5dp"
                              android:paddingBottom="5dp"
                              android:layout_marginLeft="15dp"
                              android:layout_marginRight="15dp">

                    <com.vibeit.widget.CustomFontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            vibeit:typeface="Helvetica_Bold.ttf"
                            android:text="@string/ok_to_contact_you"
                            android:textColor="#6b6b6b"
                            android:textStyle="bold"
                            android:paddingRight="5dp"
                            android:layout_weight="1"
                            android:shadowColor="@android:color/white"
                            android:shadowDx="0"
                            android:shadowDy="1"
                            android:shadowRadius="0.5"/>

                    <com.vibeit.widget.SwitchICS
                            style="@style/YesNoSwitchStyle"
                            android:id="@+id/allow_contact"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                </LinearLayout>

                <com.vibeit.widget.CustomFontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        vibeit:typeface="Helvetica.ttf"
                        android:text="@string/info"
                        android:textColor="#6b6b6b"
                        android:lineSpacingExtra="5dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"/>
            </LinearLayout>

            <View
                    android:id="@+id/left_chain"
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/form"
                    android:layout_marginLeft="40dp"/>

            <View
                    android:id="@+id/right_chain"
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/form"
                    android:layout_marginRight="40dp"/>

            <com.vibeit.widget.CustomFontButton
                    android:id="@+id/btn_continue"
                    style="@style/DefaultButton"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/left_chain"
                    android:layout_marginTop="-2dp"
                    android:background="@drawable/btn_red_selector"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="@string/btn_continue"/>
        </RelativeLayout>

        <Button android:id="@+id/btn_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/logo"
                android:layout_alignParentRight="true"
                android:layout_marginTop="-30dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_close_selector"/>
    </RelativeLayout>

</ScrollView>
