<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:vibeit="http://schemas.android.com/apk/res/com.vibeit"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:fillViewport="true"
            android:scrollbars="none">

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:paddingBottom="10dp"
            android:paddingTop="7dp"
            android:background="@drawable/blue_background">

        <ImageView
                android:id="@+id/logo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:padding="10dp"
                android:src="@drawable/logo"
                android:contentDescription="logo"/>

        <com.vibeit.widget.CustomFontButton
                android:id="@+id/btn_create_account"
                style="@style/DefaultButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_create_account"
                android:background="@drawable/btn_orange_selector"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                android:shadowColor="#f24f4e"/>

        <com.vibeit.widget.CustomFontButton
                android:id="@+id/btn_sign_in_email"
                style="@style/DefaultButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_sign_in_with_email"
                android:background="@drawable/btn_red_selector"
                android:layout_above="@id/btn_create_account"
                android:layout_margin="5dp"
                android:layout_centerHorizontal="true"
                android:shadowColor="#f24f4e"/>

        <com.vibeit.widget.CustomFontButton
                android:id="@+id/btn_sign_in_facebook"
                style="@style/DefaultButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_connect_with_facebook"
                android:background="@drawable/btn_blue_selector"
                android:drawableLeft="@drawable/ic_facebook"
                android:layout_above="@id/btn_sign_in_email"
                android:layout_margin="5dp"
                android:drawablePadding="5dp"
                android:layout_centerHorizontal="true"
                android:shadowColor="#009ecc"/>

        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="fill_parent"
                      android:layout_below="@id/logo"
                      android:layout_above="@id/btn_sign_in_facebook"
                      android:gravity="center"
                      android:orientation="vertical">

            <com.vibeit.widget.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/your_vibes"
                    android:textSize="30dp"
                    android:textColor="#e7783f"
                    vibeit:typeface="GillSans_Bold.ttf"
                    android:textStyle="bold"
                    android:shadowColor="@android:color/white"
                    android:shadowDx="0"
                    android:shadowDy="1"
                    android:shadowRadius="0.5"/>

            <com.vibeit.widget.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/our_business"
                    android:textColor="#1ab7ea"
                    android:textSize="26dp"
                    android:textStyle="bold"
                    vibeit:typeface="GillSans_Bold.ttf"
                    android:shadowColor="@android:color/white"
                    android:shadowDx="0"
                    android:shadowDy="1"
                    android:shadowRadius="0.5"/>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>
