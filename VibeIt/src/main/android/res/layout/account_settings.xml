<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:vibeit="http://schemas.android.com/apk/res/com.vibeit"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/actionbar_home_width"
              android:orientation="vertical"
              android:background="@color/settings_background">

    <com.vibeit.widget.CustomFontButton
            android:id="@+id/btn_rewards"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/rewards_button"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:text="Rewards"
            android:textSize="16dp"
            android:textStyle="bold"
            android:background="@drawable/settings_btn_bg"
            vibeit:typeface="HelveticaNeue_Bold.ttf"
            android:padding="10dp"/>

    <com.vibeit.widget.CustomFontTextView
            android:id="@+id/rewards_empty"
            android:layout_width="fill_parent"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:text="You have no rewards"
            android:padding="10dp"
            android:textSize="14dp"
            android:background="#11FFFFFF"
            android:layout_height="60dp"
            android:layout_marginBottom="-60dp"
            android:visibility="gone"/>

    <View android:layout_width="fill_parent"
          android:layout_height="3px"
          android:background="@drawable/divider_filter_local_vibes"/>

    <com.vibeit.widget.CustomFontButton
            android:id="@+id/btn_edit_account"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/edit_account_button"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:text="Edit Account"
            android:padding="10dp"
            android:textSize="16dp"
            android:textStyle="bold"
            vibeit:typeface="HelveticaNeue_Bold.ttf"
            android:background="@drawable/settings_btn_bg"/>

    <View android:layout_width="fill_parent"
          android:layout_height="3px"
          android:background="@drawable/divider_filter_local_vibes"/>

    <com.vibeit.widget.CustomFontButton
            android:id="@+id/btn_social_share_settings"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/social_share_setting_button"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:text="Social Share Settings"
            vibeit:typeface="HelveticaNeue_Bold.ttf"
            android:padding="10dp"
            android:textSize="16dp"
            android:textStyle="bold"
            android:background="@drawable/settings_btn_bg"/>

    <LinearLayout android:id="@+id/social_share_settinngs_block"
                  android:layout_width="fill_parent"
                  android:layout_height="140dp"
                  android:layout_marginBottom="-140dp"
                  android:orientation="vertical"
                  android:visibility="gone"
                  android:background="@color/settings_background">

        <View android:layout_width="fill_parent"
              android:layout_height="3px"
              android:background="@drawable/divider_filter_local_vibes"/>

        <RelativeLayout android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:padding="10dp">

            <com.vibeit.widget.SwitchICS
                    style="@style/OnOffSwitchStyle"
                    android:id="@+id/share_facebook_toggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:checked="true"/>

            <ImageView android:id="@+id/facebook_sharing_icon"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/facebook_sharing_toggle"
                       android:layout_alignParentLeft="true"
                       android:layout_centerVertical="true"/>


            <com.vibeit.widget.CustomFontTextView
                    android:id="@+id/share_facebook"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:text="Facebook Sharing"
                    android:padding="10dp"
                    android:textSize="12dp"
                    android:layout_toLeftOf="@id/share_facebook_toggle"
                    android:layout_toRightOf="@id/facebook_sharing_icon"
                    android:layout_centerVertical="true"/>
        </RelativeLayout>

        <View android:layout_width="fill_parent"
              android:layout_height="3px"
              android:background="@drawable/divider_filter_local_vibes"/>

        <RelativeLayout android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:padding="10dp">

            <com.vibeit.widget.SwitchICS
                    style="@style/OnOffSwitchStyle"
                    android:id="@+id/share_twitter_toggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:checked="true"/>

            <ImageView android:id="@+id/twitter_sharing_icon"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/twitter_sharing_toggle"
                       android:layout_alignParentLeft="true"
                       android:layout_centerVertical="true"/>

            <com.vibeit.widget.CustomFontTextView
                    android:id="@+id/twitter_sharing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:text="Twitter Sharing"
                    android:padding="10dp"
                    android:textSize="12dp"
                    android:layout_toLeftOf="@id/share_twitter_toggle"
                    android:layout_toRightOf="@id/facebook_sharing_icon"
                    android:layout_centerVertical="true"/>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:orientation="vertical"
                  android:background="@color/settings_background">

        <View android:layout_width="fill_parent"
              android:layout_height="3px"
              android:background="@drawable/divider_filter_local_vibes"/>

        <com.vibeit.widget.CustomFontButton
                android:id="@+id/btn_feedback"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/feedback_button"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:text="Feedback"
                vibeit:typeface="HelveticaNeue_Bold.ttf"
                android:padding="10dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:background="@drawable/settings_btn_bg"/>

        <View android:layout_width="fill_parent"
              android:layout_height="3px"
              android:background="@drawable/divider_filter_local_vibes"/>

        <com.vibeit.widget.CustomFontButton
                android:id="@+id/btn_terms"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/terms_button"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:text="Terms &amp; Conditions"
                vibeit:typeface="HelveticaNeue_Bold.ttf"
                android:padding="10dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:background="@drawable/settings_btn_bg"/>

        <View android:layout_width="fill_parent"
              android:layout_height="3px"
              android:background="@drawable/divider_filter_local_vibes"/>

        <com.vibeit.widget.CustomFontButton
                android:id="@+id/btn_tutorial"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/tutorial_button"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:text="Tutorial"
                vibeit:typeface="HelveticaNeue_Bold.ttf"
                android:padding="10dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:background="@drawable/settings_btn_bg"/>

        <View android:layout_width="fill_parent"
              android:layout_height="3px"
              android:background="@drawable/divider_filter_local_vibes"/>

        <com.vibeit.widget.CustomFontButton
                android:id="@+id/btn_logout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/logout_button"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:text="Log Out"
                vibeit:typeface="HelveticaNeue_Bold.ttf"
                android:padding="10dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:background="@drawable/settings_btn_bg"/>

        <View android:layout_width="fill_parent"
              android:layout_height="3px"
              android:background="@drawable/divider_filter_local_vibes"/>

    </LinearLayout>
</LinearLayout>
