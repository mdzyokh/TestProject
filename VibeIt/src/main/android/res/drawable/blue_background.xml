<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#249ed8"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:startColor="#77b5ee"
                      android:endColor="#0079b2"
                      android:angle="-90">
            </gradient>
        </shape>
    </item>
    <item>
        <bitmap android:src="@drawable/texture_background"
                android:tileMode="repeat"
                android:dither="true"/>
    </item>
</layer-list>