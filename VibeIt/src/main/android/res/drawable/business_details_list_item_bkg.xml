<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
        <item android:state_pressed="true">
            <layer-list >
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#e4e4e4"/>
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <gradient android:startColor="#ffdadada"
                              android:endColor="#ffe5e5e5"
                              android:angle="-90">
                    </gradient>
                </shape>
            </item>
            </layer-list>
        </item>
        <item>
            <layer-list >
                <item>
                    <shape android:shape="rectangle">
                        <solid android:color="#e4e4e4"/>
                    </shape>
                </item>
                <item>
                    <shape android:shape="rectangle">
                        <gradient android:startColor="#ffdadada"
                                  android:endColor="#ffe5e5e5"
                                  android:angle="90">
                        </gradient>
                    </shape>
                </item>
                <item>
                    <bitmap android:src="@drawable/texture_background_sign_in"
                            android:tileMode="repeat"
                            android:dither="true"/>
                </item>
            </layer-list>
        </item>
</selector>


