<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient android:startColor="#d9531e"
                      android:endColor="#ee7b37"
                      android:angle="-90">
            </gradient>
        </shape>
    </item>
    <item>
        <bitmap android:src="@drawable/texture_background"
                android:tileMode="repeat"
                android:dither="true"/>
    </item>
    <item android:bottom="10px" android:top="10px" android:left="10px" android:right="10px">
        <shape android:shape="rectangle">
            <corners android:radius="5dp"/>
            <stroke android:color="#c7400b" android:width="1px"/>
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>
    <item android:bottom="11px" android:top="11px" android:left="11px" android:right="11px">
        <shape android:shape="rectangle">
            <corners android:radius="5dp"/>
            <stroke android:color="#f89162" android:width="1px"/>
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>
    <item android:drawable="@drawable/reset_pasword_header_cup"/>
</layer-list>